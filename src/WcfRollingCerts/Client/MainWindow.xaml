<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="WCF Rolling Certificates Client" Height="500" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Title -->
        <TextBlock Grid.Row="0" Text="WCF Rolling Certificates Demo Client" FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- Login Section -->
        <GroupBox Grid.Row="1" Header="Authentication" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Username:" Width="80"/>
                    <TextBox x:Name="txtUsername" Text="testuser" Width="200"/>
                    <Button x:Name="btnLogin" Content="Get SAML Token" Width="120" Margin="10,0,0,0" Click="BtnLogin_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Status:" Width="80"/>
                    <TextBlock x:Name="lblAuthStatus" Text="Not authenticated" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Service Call Section -->
        <GroupBox Grid.Row="2" Header="WCF Service Call" Margin="0,0,0,10">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Request:" Width="80"/>
                    <TextBox x:Name="txtRequest" Text="Hello from WCF client" Width="300"/>
                    <Button x:Name="btnCallService" Content="Call Service" Width="120" Margin="10,0,0,0" Click="BtnCallService_Click" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
        
        <!-- Response Section -->
        <GroupBox Grid.Row="3" Header="Service Response" Margin="0,0,0,10">
            <TextBox x:Name="txtResponse" Height="60" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>
        
        <!-- Log -->
        <GroupBox Grid.Row="4" Header="Activity Log">
            <TextBox x:Name="txtLog" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" FontFamily="Consolas" FontSize="10"/>
        </GroupBox>
        
        <!-- Clear Log Button -->
        <Button Grid.Row="5" x:Name="btnClearLog" Content="Clear Log" Width="100" HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnClearLog_Click"/>
    </Grid>
</Window>
